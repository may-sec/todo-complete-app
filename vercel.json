{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(todo|todos|completed)",
      "dest": "backend/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/assets/$1"
    },
    {
      "src": "/vite.svg",
      "dest": "/frontend/vite.svg"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}